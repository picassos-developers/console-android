<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <View
        android:layout_width="41dp"
        android:layout_height="6dp"
        android:background="?divider_inline" />

    <LinearLayout
        android:id="@id/account_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?color_background"
            app:cardCornerRadius="21dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_gear_outline"
                android:padding="11dp"
                tools:ignore="ContentDescription"
                app:tint="?color_dark" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/input_text_size"
            android:textColor="?color_dark"
            android:text="@string/account_settings"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/qr_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?color_background"
            app:cardCornerRadius="21dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_qr"
                android:padding="11dp"
                tools:ignore="ContentDescription"
                app:tint="?color_dark" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/input_text_size"
            android:textColor="?color_dark"
            android:text="@string/signin_with_qr"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?color_background"
            app:cardCornerRadius="21dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_language"
                android:padding="11dp"
                tools:ignore="ContentDescription"
                app:tint="?color_dark" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/input_text_size"
            android:textColor="?color_dark"
            android:text="@string/language"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/appearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?color_background"
            app:cardCornerRadius="21dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_darkmode"
                android:padding="11dp"
                tools:ignore="ContentDescription"
                app:tint="?color_dark" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/input_text_size"
            android:textColor="?color_dark"
            android:text="@string/appearance"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/about_console"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?color_background"
            app:cardCornerRadius="21dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_info_outline"
                android:padding="11dp"
                tools:ignore="ContentDescription"
                app:tint="?color_dark" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/input_text_size"
            android:textColor="?color_dark"
            android:text="@string/about"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?color_background"
            app:cardCornerRadius="21dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_logout"
                android:padding="11dp"
                tools:ignore="ContentDescription"
                app:tint="@color/color_danger" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/input_text_size"
            android:textColor="@color/color_danger"
            android:text="@string/signout"/>

    </LinearLayout>

</LinearLayout>