<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?color_background"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/toolbar_background"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    tools:ignore="RelativeOverlap,UseCompoundDrawables">

                    <ImageView
                        android:id="@id/open_navigation"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingStart="0dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="5dp"
                        android:src="@drawable/icon_menu"
                        app:tint="?color_dark"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/pacifico_regular"
                        android:gravity="center_vertical"
                        android:text="@string/dashboard"
                        android:textColor="?color_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@id/open_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    app:cardBackgroundColor="?color_dark"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@id/username_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="R"
                        android:textAllCaps="true"
                        android:textColor="?color_light_separate"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:id="@id/dashboard_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="360dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@id/launch_app"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="14dp"
                            app:cardBackgroundColor="?color_dark"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="3dp"
                                    android:src="@drawable/icon_launch"
                                    app:tint="?color_light_separate"
                                    tools:ignore="ContentDescription,TooDeepLayout" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="14dp"
                            app:cardBackgroundColor="?color_light_separate"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:cardBackgroundColor="?color_background"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="13dp"
                                        android:src="@drawable/icon_cloud"
                                        app:tint="?color_dark"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:orientation="vertical"
                                    tools:ignore="RelativeOverlap">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@id/database_size"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_bold"
                                            android:text="0,000"
                                            android:textColor="?color_dark"
                                            android:textSize="16sp"
                                            tools:ignore="HardcodedText,TooDeepLayout" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="B"
                                            android:textColor="?color_dark"
                                            android:textSize="13sp"
                                            tools:ignore="HardcodedText,TooDeepLayout" />

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="@string/database_size"
                                        android:textColor="?color_dark"
                                        android:textSize="13sp"
                                        tools:ignore="SmallSp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="14dp"
                            app:cardBackgroundColor="?color_light_separate"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:cardBackgroundColor="?color_background"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="13dp"
                                        android:src="@drawable/icon_user"
                                        app:tint="?color_dark"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:orientation="vertical"
                                    tools:ignore="RelativeOverlap">

                                    <TextView
                                        android:id="@id/total_users"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_bold"
                                        android:text="0,000"
                                        android:textColor="?color_dark"
                                        android:textSize="16sp"
                                        tools:ignore="HardcodedText,TooDeepLayout" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="@string/users_were_active"
                                        android:textColor="?color_dark"
                                        android:textSize="13sp"
                                        tools:ignore="SmallSp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="14dp"
                            app:cardBackgroundColor="?color_light_separate"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:cardBackgroundColor="?color_background"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="13dp"
                                        android:src="@drawable/icon_bell_outline"
                                        app:tint="?color_dark"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:orientation="vertical"
                                    tools:ignore="RelativeOverlap">

                                    <TextView
                                        android:id="@id/notifications"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_bold"
                                        android:text="0,000"
                                        android:textColor="?color_dark"
                                        android:textSize="16sp"
                                        tools:ignore="HardcodedText,TooDeepLayout" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="@string/total_notifications"
                                        android:textColor="?color_dark"
                                        android:textSize="13sp"
                                        tools:ignore="SmallSp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="14dp"
                            app:cardBackgroundColor="?color_light_separate"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:cardBackgroundColor="?color_background"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="13dp"
                                        android:src="@drawable/icon_visit"
                                        app:tint="?color_dark"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:orientation="vertical"
                                    tools:ignore="RelativeOverlap">

                                    <TextView
                                        android:id="@id/visits"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_bold"
                                        android:text="0,000"
                                        android:textColor="?color_dark"
                                        android:textSize="16sp"
                                        tools:ignore="HardcodedText,TooDeepLayout" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="@string/console_visits"
                                        android:textColor="?color_dark"
                                        android:textSize="13sp"
                                        tools:ignore="SmallSp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:id="@id/customization_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/card_background"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/circle_blue"
                        android:padding="8dp"
                        android:src="@drawable/icon_gift"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/color_white"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/get_a_free_customization"
                            android:textColor="?color_dark"
                            android:textStyle="bold"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/have_us_customize_your_app_for_free"
                            android:textColor="?color_dark"
                            android:textSize="12sp"
                            tools:ignore="SmallSp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@id/push_notifications_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/toolbar_background_dark"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        android:src="@drawable/icon_bell_outline"
                        app:tint="?color_dark"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/push_notifications"
                            android:textColor="?color_light_separate"
                            android:textStyle="bold"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/send_push_notifications_to_your_app_users"
                            android:textColor="?color_light_separate"
                            android:textSize="12sp"
                            tools:ignore="SmallSp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@id/email_address_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/toolbar_background_dark"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/circle"
                        android:padding="8dp"
                        android:src="@drawable/icon_mail"
                        app:tint="?color_dark"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email_address"
                            android:textColor="?color_light_separate"
                            android:textStyle="bold"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@id/email_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/loading_email_address"
                            android:textColor="?color_light_separate"
                            android:textSize="12sp"
                            tools:ignore="SmallSp" />

                    </LinearLayout>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/toolbar_background"
                            android:padding="15dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/icon_full_screen"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:background="@drawable/rectangle_secondary"
                                    app:tint="?color_dark"
                                    tools:ignore="ContentDescription" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@id/fullscreen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="25dp"
                                    android:thumb="@drawable/switch_thumb_big"
                                    app:track="@drawable/switch_track_big" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fullscreen_mode"
                                android:layout_marginTop="20dp"
                                android:textColor="?color_dark"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/toolbar_background"
                            android:padding="15dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/icon_sleep"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:background="@drawable/rectangle_secondary"
                                    app:tint="?color_dark"
                                    tools:ignore="ContentDescription" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@id/screen_sleep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="25dp"
                                    android:thumb="@drawable/switch_thumb_big"
                                    app:track="@drawable/switch_track_big" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/screen_sleep"
                                android:layout_marginTop="20dp"
                                android:textColor="?color_dark"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/toolbar_background"
                            android:padding="15dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/icon_darkmode"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:background="@drawable/rectangle_secondary"
                                    app:tint="?color_dark"
                                    tools:ignore="ContentDescription" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@id/force_fullscreen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="25dp"
                                    android:thumb="@drawable/switch_thumb_big"
                                    app:track="@drawable/switch_track_big" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/force_fullscreen"
                                android:layout_marginTop="20dp"
                                android:textColor="?color_dark"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/toolbar_background"
                            android:padding="15dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/icon_start"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:background="@drawable/rectangle_secondary"
                                    app:tint="?color_dark"
                                    tools:ignore="ContentDescription,TooManyViews" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@id/get_started"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="25dp"
                                    android:thumb="@drawable/switch_thumb_big"
                                    app:track="@drawable/switch_track_big"
                                    tools:ignore="TooManyViews" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/get_started_page"
                                android:layout_marginTop="20dp"
                                android:textColor="?color_dark"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/toolbar_background"
                            android:padding="15dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/icon_download_cloud"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:background="@drawable/rectangle_secondary"
                                    app:tint="?color_dark"
                                    tools:ignore="ContentDescription" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@id/download_via_wifi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="25dp"
                                    android:thumb="@drawable/switch_thumb_big"
                                    app:track="@drawable/switch_track_big" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/download_via_wifi"
                                android:layout_marginTop="20dp"
                                android:textColor="?color_dark"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                layout="@layout/include_internet_connection" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
